<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.example.quanla.book.fragments.PersonalFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/sachbia"
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/txt"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:text="  VỀ APP"
        android:layout_below="@id/iv"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@id/txt"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:id="@+id/icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:text="Thông tin app"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
    android:id="@+id/rl2"
    android:layout_below="@id/rl"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:id="@+id/icon1"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:text="Báo cáo"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/icon1"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/rl3"
        android:layout_below="@id/rl2"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:id="@+id/icon2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:text="Fanpage"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/icon2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_below="@id/rl3"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/ivlog"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play_for_work_black_24dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivlog"
            android:text="ĐĂNG NHẬP"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>
