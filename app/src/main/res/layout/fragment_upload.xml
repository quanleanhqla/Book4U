<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quanla.book.fragments.UploadFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_marginTop="12dp"
        android:textColor="#757575"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Sáng tác và xuất bản tác phẩm của bạn"
        android:id="@+id/txt_sangtac"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />



    <ImageView
        android:layout_below="@id/txt_sangtac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/image_selector"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txt_them"
        android:gravity="center_vertical"
        android:text=" Thêm bìa sách"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_sangtac"
        android:layout_width="100dp"
        android:layout_height="150dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="12dp"
        android:layout_below="@id/imageView"
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Tiêu Đề Truyện"
            android:id="@+id/edt_tieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til1"
        android:layout_marginTop="6dp"
        android:layout_below="@id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_mota"
            android:hint="Mô Tả Truyện"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btn_tieptheo"
        android:elevation="6dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="Tiếp theo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/til1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
